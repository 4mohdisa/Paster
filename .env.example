# Cloudflare R2 Cloud Storage Configuration
# ==========================================
# Get these credentials from: https://dash.cloudflare.com/r2
#
# Steps to get credentials:
# 1. Go to Cloudflare Dashboard â†’ R2 Object Storage
# 2. Create a bucket (e.g., "electron-app-storage")
# 3. Navigate to "Manage R2 API Tokens"
# 4. Create API token with "Object Read & Write" permissions
# 5. Copy the credentials below

R2_ACCOUNT_ID=your_cloudflare_account_id_here
R2_ACCESS_KEY_ID=your_r2_access_key_id_here
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key_here
R2_BUCKET_NAME=electron-app-storage

# Feature Flags
# =============
# Enable/disable cloud storage functionality
CLOUD_STORAGE_ENABLED=true

# Automatic fallback to local storage if cloud upload fails
CLOUD_STORAGE_FALLBACK_TO_LOCAL=true

# File size threshold for cloud storage (in MB)
# Files larger than this will be stored in cloud, smaller files stay local
CLOUD_STORAGE_THRESHOLD_MB=5

# Google AI API Key (existing configuration)
# ==========================================
GEMINI_API_KEY=your_google_ai_api_key_here
# OR
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
