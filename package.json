{
  "name": "aipaste-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently --names \"electron,main-window\" --prefix-colors \"blue,green\" \"pnpm --filter @aipaste/electron dev\" \"pnpm --filter @aipaste/main-window dev\"",
    "dev:electron": "pnpm --filter @aipaste/electron dev",
    "dev:main-window": "pnpm --filter @aipaste/main-window dev",
    "build": "pnpm --filter @aipaste/main-window build && pnpm --filter @aipaste/electron build",
    "dist": "pnpm build && pnpm --filter @aipaste/electron dist",
    "lint": "pnpm run --parallel lint",
    "clean": "pnpm run --parallel clean",
    "typecheck": "pnpm run --parallel typecheck"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "nodemon": "^3.1.10",
    "typescript": "^5.9.0"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0"
  }
}